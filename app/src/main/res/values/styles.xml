    <style name="MyPinStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/colorPrimaryGreen</item>
        <item name="android:backgroundTint">@color/colorTrans</item>
        <item name="android:colorControlHighlight">@color/colorTrans</item>
        <item name="android:src">@drawable/baseline_add_location_black_36</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">

    </style>
